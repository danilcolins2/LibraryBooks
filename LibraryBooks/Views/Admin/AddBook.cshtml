@model LibraryBooks.Models.Admin.AddedBookModel;
@{
    ViewBag.Title = "Добавление книги";
}
@{
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center mb-4">Добавление книги</h1>
            </div>
        </div>

        <form method="post" asp-action="AddBook" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-md-12 pb-4">
                    <div class="card shadow-sm">
                        <div class="row">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">

                                            <div class="form-group mb-4">
                                                <label for="formFile" class="form-label">Обложка:</label>
                                                
                                                <div class="form-group mb-4">
                                                    <input class="form-control" type="file" id="formFile" name="formFile" accept="image/*">
                                                    <div class="invalid-feedback">
                                                        Неверный формат файла
                                                    </div>
                                                </div>

                                                

                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="form-group mb-3">
                                                <label for="Title" class="form-label">Название:</label>
                                                <input type="text" class="form-control" id="Title" name="Title" value="@Model?.Title" required />
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="Author" class="form-label">Автор:</label>
                                                <input type="text" class="form-control" id="Author" name="Author" value="@Model?.Author" required />
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="Description" class="form-label">Описание:</label>
                                                <textarea class="form-control" id="Description" name="Description" rows="3">@Model?.Description</textarea>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="Genre" class="form-label">Жанр:</label>
                                                <input type="text" class="form-control" id="Genre" name="Genre" value="@Model?.Genre" required />
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="ISBN" class="form-label">ISBN:</label>
                                                <input type="text" class="form-control" id="ISBN" name="ISBN" value="@Model?.ISBN" required />
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="PublicationDate" class="form-label">Дата публикации:</label>
                                                <input type="date" class="form-control" id="PublicationDate" name="PublicationDate" value="@Model?.PublicationDate?.ToString("yyyy-MM-dd")" />
                                            </div>
                                            <div class="d-flex justify-content-between mt-3">
                                                <button type="submit" class="btn btn-primary">Добавить книгу</button>
                                                <a href="javascript:history.back()" class="btn btn-outline-secondary">Вернуться назад</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    
}
